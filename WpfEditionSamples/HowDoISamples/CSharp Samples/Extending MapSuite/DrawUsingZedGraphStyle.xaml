<UserControl x:Class="CSHowDoISamples.DrawUsingZedGraphStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.MapSuite.WpfDesktopEdition;assembly=WpfDesktopEdition"
    xmlns:uc2="clr-namespace:CSHowDoISamples">
    <Grid>
        <uc1:WpfMap x:Name="wpfMap1" Loaded="WpfMap_Loaded"></uc1:WpfMap>
        <uc2:InstructionPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <StackPanel>
                <TextBlock x:Name="InstructionLabel" TextWrapping="Wrap" Margin="0,0,0,5"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock TextAlignment="Center" Width="35" Height="15" Background="LightBlue" Margin="4">White</TextBlock>
                    <TextBlock TextAlignment="Center" Width="35" Height="15" Background="LawnGreen" Margin="4">Asian</TextBlock>
                </StackPanel>
            </StackPanel>
        </uc2:InstructionPanel>
    </Grid>
</UserControl>
